awk ' $1 ~ 3R && $2 >= FlyBase && $3 <= gene ' 3R.recode.vcf > Rheb_recode.vcf
awk ' $1 ~ X && $2 >= FlyBase && $3 <= gene ' X.recode.vcf > rictor_recode.vcf
awk ' $1 ~ X && $2 >= FlyBase && $3 <= gene ' X.recode.vcf > RpS6_recode.vcf
awk ' $1 ~ 3L && $2 >= FlyBase && $3 <= gene ' 3L.recode.vcf > S6k_recode.vcf
awk ' $1 ~ X && $2 >= FlyBase && $3 <= gene ' X.recode.vcf > sgg_recode.vcf
